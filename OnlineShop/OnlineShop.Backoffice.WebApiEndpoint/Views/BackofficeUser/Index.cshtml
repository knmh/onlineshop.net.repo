@* 
@model List<IdentityUser>
<table class="table table-striped table-bordered table-secondary ">
    <tr>
        <th>Id</th>
        <th>Email</th>
        <th>UserName</th>
        <th>Actions</th>
    </tr>
    @if (Model.Count == 0)
    {
        <tr>
            <td colspan="6">There is not any registered user in the app</td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Email</td>
                <td>@item.UserName</td>
                <td>
                    <form method="post" asp-controller="User" asp-action="Delete">
                        <input type="hidden" value="@item.Id" name="id" />
                        <input type="submit" value="Delete" class="btn btn-danger" />

                    </form>
                    <a asp-action="EditUserRoles" asp-controller="User" asp-route-id="@item.Id" class="btn btn-info">Edit User</a>
                </td>
            </tr>
        }
    }
</table>
<a asp-action="RegisterUser" asp-controller="User" class="btn btn-info">Register User</a> *@